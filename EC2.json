{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template CloudFormation para criar uma instância EC2 para o e-commerce",
  "Parameters": {
    "KeyName": {
      "Description": "Nome do par de chaves SSH para acessar a instância",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "InstanceType": {
      "Description": "Tipo da instância EC2",
      "Type": "String",
      "Default": "t3.micro",
      "AllowedValues": ["t2.micro", "t3.micro", "t3.small", "t3.medium"],
      "ConstraintDescription": "Deve ser um tipo válido de instância EC2."
    },
    "VpcId": {
      "Description": "ID da VPC onde a instância será criada",
      "Type": "AWS::EC2::VPC::Id"
    },
    "SubnetId": {
      "Description": "ID da Sub-rede dentro da VPC",
      "Type": "AWS::EC2::Subnet::Id"
    }
  },
  "Resources": {
    "EcommerceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Permitir HTTP e SSH para instância do e-commerce",
        "VpcId": { "Ref": "VpcId" },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "EcommerceEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "InstanceType": { "Ref": "InstanceType" },
        "KeyName": { "Ref": "KeyName" },
        "ImageId": "ami-08c40ec9ead489470",
        "SubnetId": { "Ref": "SubnetId" },
        "SecurityGroupIds": [{ "Ref": "EcommerceSecurityGroup" }],
        "Tags": [
          { "Key": "Name", "Value": "Ecommerce-EC2" }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Sub": [
              "#!/bin/bash\n yum update -y\n yum install -y httpd\n systemctl start httpd\n systemctl enable httpd\n echo \"<h1>Servidor do E-commerce rodando na EC2 🚀</h1>\" > /var/www/html/index.html",
              {}
            ]
          }
        }
      }
    }
  },
  "Outputs": {
    "InstanceId": {
      "Description": "ID da instância EC2",
      "Value": { "Ref": "EcommerceEC2Instance" }
    },
    "PublicIP": {
      "Description": "IP público da instância",
      "Value": { "Fn::GetAtt": ["EcommerceEC2Instance", "PublicIp"] }
    },
    "WebURL": {
      "Description": "URL HTTP para acessar a aplicação",
      "Value": {
        "Fn::Sub": "http://${EcommerceEC2Instance.PublicDnsName}"
      }
    }
  }
}
